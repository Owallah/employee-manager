<%= form_with(model: employee, html: { class: "needs-validation", novalidate: true }) do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h4>
      <ul>
      <% employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :full_name, class: "form-label" %>
    <%= form.text_field :full_name, class: "form-control", placeholder: "Enter full name" %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, class: "form-label" %>
    <%= form.text_field :phone_number, class: "form-control", placeholder: "Enter phone number" %>
  </div>

  <div class="form-group">
    <%= form.label :position, class: "form-label" %>
    <%= form.text_field :position, class: "form-control", placeholder: "Enter position" %>
  </div>

  <div class="form-group">
    <%= form.label :department, class: "form-label" %>
    <%= form.text_field :department, class: "form-control", placeholder: "Enter department" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.text_field :status, class: "form-control", placeholder: "Enter status", value: "Pending Verification", readonly: true %>
  </div>

  <div class="form-group">
    <%= form.label :emergency_contact, class: "form-label" %>
    <%= form.text_field :emergency_contact, class: "form-control", placeholder: "Enter emergency contact" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_joining, class: "form-label" %>
    <%= form.date_field :date_of_joining, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save Employee", class: "btn btn-primary" %>
  </div>
<% end %>
